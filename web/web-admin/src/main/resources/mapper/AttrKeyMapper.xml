<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xieyv.lighthome.web.admin.mapper.AttrKeyMapper">

    <resultMap id="AttrKeyVoMap" type="com.xieyv.lighthome.web.admin.vo.attr.AttrKeyVo">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="attrValueList" ofType="com.xieyv.lighthome.model.entity.AttrValue">
            <id property="id" column="attr_value_id"/>
            <result property="name" column="attr_value_name"/>
            <result property="attrKeyId" column="attr_key_id"/>
        </collection>
    </resultMap>

    <select id="listAttrInfo" resultMap="AttrKeyVoMap">
        select k.id,
               k.name,
               v.id as attr_value_id,
               v.name as attr_value_name,
               v.attr_key_id
        from attr_key as k
            left join attr_value as v
                on k.id = v.attr_key_id and v.is_deleted=0
        where k.is_deleted=0
    </select>
</mapper>
