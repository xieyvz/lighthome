<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xieyv.lighthome.web.admin.mapper.UserInfoMapper">

    <select id="listByUserInfoQueryVo" resultType="com.xieyv.lighthome.model.entity.UserInfo">
        select id,
               phone,
               avatar_url,
               nickname,
               `status`
        from
            user_info
        <where>
            is_deleted=0
            <if test="queryVo.phone != null and queryVo.phone != ''">
                and phone like concat('%',#{queryVo.phone},'%')
            </if>
            <if test="queryVo.status != null">
                and status=#{queryVo.status}
            </if>
        </where>
    </select>
</mapper>
